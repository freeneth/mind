{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
	"globals": {
		"AsyncIO": true,
		"G": true,
		"LDB": true
	},
	"rules": {
		"indent": [
			"warn",
			4
		],
		"quotes": [
			"warn",
			"single"
		],
		"no-console": [
			"off"
		],
		"comma-dangle": [
			"warn",
			"always-multiline"
		],
		"key-spacing": [
			"warn"
		]
	}
}
